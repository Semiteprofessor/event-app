{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "moduleDetection": "force",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "ts-node": {
    "esm": true
  }
}
